{
  "name": "personal-history-archive",
  "description": "A server and browser extension for saving a personal archive",
  "version": "0.1.0",
  "author": "Ian Bicking <ian@ianbicking.org>",
  "bugs": {
    "url": "https://github.com/ianb/personal-history-archive/issues"
  },
  "dependencies": {
    "atob": "^2.0.3",
    "body-parser": "^1.18.2",
    "btoa": "^1.1.2",
    "command-line-args": "^5.0.1",
    "ejs": "^2.5.7",
    "ejs-lint": "^0.3.0",
    "escape-string-regexp": "^1.0.5",
    "eslint-plugin-mozilla": "^0.4.10",
    "eslint-plugin-no-unsanitized": "^2.0.2",
    "eslint-plugin-promise": "^3.6.0",
    "express": "^4.16.2",
    "firefox-profile": "^1.1.0",
    "geckodriver": "^1.10.0",
    "mocha": "^5.0.4",
    "nodemon": "^1.14.11",
    "readability": "git+https://github.com/mozilla/readability.git",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "sha1": "^1.1.1",
    "shell-quote": "^1.6.1",
    "sqlite3": "^3.1.13",
    "tmp": "0.0.33",
    "web-ext": "^2.2.2",
    "webextension-polyfill": "^0.2.1",
    "yargs": "^10.1.1"
  },
  "devDependencies": {},
  "homepage": "https://github.com/ianb/personal-history-archive",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianb/personal-history-archive.git"
  },
  "scripts": {
    "server": "nodemon --watch server/ -e js,ejs server/server.js",
    "resync": "node server/resync-pages.js",
    "lint:js": "eslint .",
    "firefox-profile": "firefox-profile",
    "for-each": "node server/for-each.js",
    "ejslint": "ejslint server/*.ejs",
    "build:zip": "mkdir -p build && web-ext build --source-dir tracker-extension/ --ignore-files '**/README.md' --ignore-files '**/*.template' --overwrite-dest && mv web-ext-artifacts/personal_history_saver*.zip build/tracker-extension.zip && rmdir web-ext-artifacts || true",
    "test": "npm run build:zip && npm run test:selenium",
    "test:selenium": "PATH=$PATH:/Applications/FirefoxNightly.app/Contents/MacOS/ mocha test/test.js"
  }
}
