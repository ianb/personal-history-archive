{
  "manifest_version": 2,
  "name": "Personal History Saver",
  "version": "0.1.0",
  "description": "Saves all your history items to a local server",
  "author": "Ian Bicking <ian@ianbicking.org>",
  "homepage_url": "https://github.com/ianb/personal-history-archive",
  "applications": {
    "gecko": {
      "id": "personal-history-saver@ianbicking.org"
    }
  },
  "browser_action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Personal history",
    "browser_style": true,
    "default_popup": "debug-scripts/popup.html"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "build/buildSettings.js",
      "log.js",
      "util.js",
      "browserId.js",
      "backgroundOnMessage.js",
      "communication.js",
      "scraper/scrapeTab.js",
      "historySaver.js",
      "activityTracker.js",
      "autofetch/autofetchListener.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/fetcher.html"],
      "js": [
        "browser-polyfill.js",
        "build/buildSettings.js",
        "log.js",
        "util.js",
        "autofetch/sitescript.js"
      ]
    },
    {
      "matches": ["http://localhost/test-static/debug.html"],
      "js": [
        "browser-polyfill.js",
        "build/buildSettings.js",
        "log.js",
        "util.js",
        "debug-scripts/debug-show.js"
      ]
    }
  ],
  "permissions": [
    "http://localhost:11180/*",
    "*://localhost/*",
    "<all_urls>",
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "nativeMessaging"
  ]
}
