{
  "manifest_version": 2,
  "name": "Personal History Saver",
  "version": "0.1.0",
  "description": "Saves all your history items to a local server",
  "author": "Ian Bicking <ian@ianbicking.org>",
  "homepage_url": "https://github.com/ianb/personal-history-archive",
  "applications": {
    "gecko": {
      "id": "personal-history-saver@ianbicking.org"
    }
  },
  "browser_action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Personal history",
    "browser_style": true,
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "scraper/scrape-tab.js",
      "scraper/send-page.js",
      "continuous-saver.js",
      "history-tracker.js",
      "autofetch/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/fetcher.html"],
      "js": [
        "browser-polyfill.js",
        "scraper/send-page.js",
        "autofetch/sitescript.js"
      ]
    },
    {
      "matches": ["http://localhost/debug.html"],
      "js": [
        "browser-polyfill.js",
        "debug-show.js"
      ]
    }
  ],
  "permissions": [
    "http://localhost:11180/*",
    "*://localhost/*",
    "<all_urls>",
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest"
  ]
}
